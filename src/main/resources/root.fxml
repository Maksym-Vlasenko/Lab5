      <HBox alignment="CENTER" spacing="20.0">
         <children>
          <Button fx:id="addPhone" alignment="CENTER" mnemonicParsing="false" prefWidth="200.0" text="Add" />
            <Button fx:id="editPhone" alignment="CENTER" mnemonicParsing="false" prefWidth="200.0" text="Edit" />
            <Button fx:id="deletePhone" alignment="CENTER" mnemonicParsing="false" prefWidth="200.0" text="Delete" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
