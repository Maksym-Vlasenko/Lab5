          <TableColumn fx:id="numberColumn" prefWidth="232.0" text="Number" />
            <TableColumn fx:id="colorColumn" minWidth="0.0" prefWidth="162.0" text="Color" />
            <TableColumn fx:id="callsDurationColumn" prefWidth="203.0" text="Calls duration (min)" />
