<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<GridPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="maksim.controller.CreateFileController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="500.0" spacing="15.0">
         <children>
            <Label text="Enter file name:" />
            <TextField fx:id="filenameField" prefHeight="31.0" prefWidth="350.0" />
         </children>
         <padding>
            <Insets left="15.0" right="15.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.rowIndex="1">
         <children>
            <Button mnemonicParsing="false" onAction="#ok" prefWidth="100.0" text="OK" GridPane.rowIndex="1" />
            <Button mnemonicParsing="false" onAction="#cancel" prefWidth="100.0" text="Cancel" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets right="15.0" />
               </GridPane.margin>
            </Button>
         </children>
         <GridPane.margin>
            <Insets right="15.0" />
         </GridPane.margin>
      </HBox>
   </children>
</GridPane>
